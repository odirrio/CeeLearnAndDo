@model IEnumerable<CeeLearnAndDo.Models.Article>

@{
    ViewBag.Title = "Artikelen-databank";
}

<div class="head-container">
    <div class="container">
        <h2>Artikelen-databank</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.ActionLink("Bekijken", "Details", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
