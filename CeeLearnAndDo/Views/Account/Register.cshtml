@model CeeLearnAndDo.Models.RegisterViewModel
@{
    ViewBag.Title = "Registreren";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-body">
                <h2>@ViewBag.Title</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Firstname)
                                @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control", @id = "exampleInputName" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Lastname)
                                @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control", @id = "exampleInputLastName" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "exampleInputEmail1" })
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Password)
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "exampleInputPassword1" })
                            </div>
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.ConfirmPassword)
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "exampleConfirmPassword" })
                            </div>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-default" value="Registreren" />
                    }
                <div class="text-center">
                    @Html.ActionLink("Inloggen", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "d-block small mt-3" })
                </div>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
