@model IEnumerable<CeeLearnAndDo.Models.Reference>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referentiebeheer</h2>

<p>
    @Html.ActionLink("Nieuwe referentie", "Create", null, new { @class = "btn btn-success" })
</p>

<section class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-md-3" style="min-width: 286px; margin: 10px">
                <a title="Ga naar '@Html.DisplayFor(modelItem => item.URL)'" : href="http://@Html.DisplayFor(modelItem => item.URL)" target="_blank">
                    <img class="card-img-top" src="~/UploadedFiles/ReferenceImages/@Html.DisplayFor(modelItem => item.ImagePath)" />
                </a>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text" title="@Html.DisplayFor(modelItem => item.Description)">
                        @if (item.Description.Length > 20)
                        {
                            @item.Description.Substring(0, 20)<span>...</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Description)
                        }
                    </p>
                    <a title="Bekijken" href="@Url.Action("Details", new { id = item.Id })" class="btn btn-primary"><i class="fas fa-eye"></i></a>
                    <a title="Wijzigen" href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-info"><i class="fas fa-edit"></i></a>
                    <a title="Verwijderen" href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                </div>
            </div>
        }
    </div>
</section>